<section class="custom-controller-hero">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      <p class="hero-description">{{ section.settings.description }}</p>

      {% if section.settings.show_cta %}
        <div class="hero-actions">
          <a href="{{ section.settings.cta_link }}" class="btn-primary">
            {{ section.settings.cta_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Controller Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Hero Title",
      "default": "Build Your Dream Controller"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Mod it. Love it. Game on."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Custom shells, grips, and accessories for gamers who want control and style."
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show Call to Action",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Mods"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Custom Controller Hero"
    }
  ]
}
{% endschema %}
