<section class="featured-mods">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtitle }}</p>
    <div class="mods-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'mod' %}
            <div class="mod-card">
              <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.title }}">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
              <a href="{{ block.settings.link }}" class="btn-primary">View Mod</a>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Mods",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Mods"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Our most popular controller upgrades"
    }
  ],
  "blocks": [
    {
      "type": "mod",
      "name": "Mod Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Mod Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Mod Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Mod Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Mod Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Mods"
    }
  ]
}
{% endschema %}
